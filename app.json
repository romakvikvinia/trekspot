{
  "expo": {
    "name": "Trekspot",
    "slug": "trekspot",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "usesAppleSignIn": true,
      "supportsTablet": true,
      "bundleIdentifier": "com.trekspot.app",
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.714520072398-tnhiqksspq65qq0atcq5mei8l8mefrbu"
            ]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "softwareKeyboardLayoutMode": "pan",
      "package": "com.trekspot.app"
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "extra": {
      "eas": {
        "projectId": "0208e3d2-29fc-4d09-9a72-11fae25997f6"
      }
    },
    "owner": "Trekspot",
    "expo": {
      "plugins": [
        "expo-apple-authentication",
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.714520072398-tnhiqksspq65qq0atcq5mei8l8mefrbu"
        },
        [
          "expo-location",
          {
            "locationAlwaysAndWhenInUsePermission": "Allow Trekspot to use your location."
          }
        ],
        [
          "expo-document-picker",
          {
            "iCloudContainerEnvironment": "Production"
          }
        ],
        [
          "expo-image-picker",
          {
            "photosPermission": "Allow Trekspot to access your photos."
          }
        ],
        [
          "expo-media-library",
          {
            "photosPermission": "Allow Trekspot to access your photos.",
            "savePhotosPermission": "Allow Trekspot to save photos.",
            "isAccessMediaLocationEnabled": true
          }
        ]
      ]
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/0208e3d2-29fc-4d09-9a72-11fae25997f6"
    },
    "plugins": ["expo-font", "expo-secure-store"]
  }
}
